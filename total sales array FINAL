using System;
namespace TotalSalesArrayPractice
{
    public class program
    {
        public static void Main()
        {
            int i;
            int[] arr = new int[7]; // 7 size array
            int sum = 0;// initializing sum for total

            for (i = 0; i < 7; i++)
            {
                Console.Write("\nEnter today's sales:\t");// Accepting value from user
                arr[i] = Convert.ToInt32(Console.ReadLine());//Storing value in an array
                sum += arr[i];
            }
            Console.WriteLine(sum);//Printing the value on conso
            //Console.WriteLine("\n\n");//
            for (i = 0; i < 7; i++)
            {
                Console.WriteLine("you entered {0}", arr[i]);
            }
            Console.ReadLine();
        }
    }
}
