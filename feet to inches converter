using System;

namespace FeetTOinchesFUNCT {//ns open
    class Program {//class open
        static void Main(string[] args)
        {//main open
            int feet = 0;//feet input by user
            int inches = 0;//inches to be converted and displayed from feet input
            Console.WriteLine("dearest user: kindly input footage to be converted");//user prompt to input
            feet = int.Parse(Console.ReadLine());// user input converted to int for conversion maths
            inches = feetToInches(feet, inches);// the returned function goodness
            Console.WriteLine("you get " + inches + "inches" + " from " + feet + "feet" + ", naturally");//display or final result requested in assignment
        }//main close

        static int feetToInches(int feet, int inches)//function and its arguments/parameters
        {//feetToInches function open
            inches = 12 * feet;// our maths: converting footage to inches for our dearest user
            return inches;// to be returned
        }//feetToInches function close
    }//class close
}//ns close
